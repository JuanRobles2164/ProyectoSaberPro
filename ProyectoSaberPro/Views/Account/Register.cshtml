@using ProyectoSaberPro.Models
@model ProyectoSaberPro.Models.RegisterViewModel
@using Microsoft.Owin.Security
@{
    ViewBag.Title = "Bienvenido!";
}
<div class="titulo">@ViewBag.Title</div>
<div class="row">
    <div class="info" align="center">
        <div id="boton" onclick="divLogin()"></div>
        <div class="ojo" id="caja" style="vertical-align:middle;">
            <b>Cree un usuario de tipo administrador.</b>
        </div>
    </div>
</div>
<style>
    .ojo, .info {
        background-repeat: no-repeat;
        background-position: 10px center;
        font-family: Arial, Helvetica, sans-serif;
        text-align: left;
    }

    .ojo {
        color: #9F6000;
        font-size: 0px;
        background-color: #FEEFB3;
        background-image: url('../../Pictures/info-advertencia.png');
    }

    .info {
        color: #D8000C;
        width: auto;
        vertical-align: middle;
        border: 1px solid;
        margin: 10px 0px;
        font-size: 20px;
        padding: 10px 50px 10px 50px;
        color: #00529B;
        background-color: #BDE5F8;
        background-image: url('../../Pictures/informacion.png');
        background-position: center;
    }

    .titulo {
        font-size: 75px;
        vertical-align: middle;
        color: #05193D;
        font-weight: bold;
    }

    .rgs {
        font-size: 22px;
        vertical-align: middle;
        color: #05193D;
    }

    #boton {
        background-color: #BDE5F8;
        background-image: url('../../Pictures/info.png');
        width: 32px;
        cursor: pointer;
        text-align: center;
        height: 32px;
        box-shadow: 0px 0px 2px #000;
        display: inline-block;
        vertical-align: middle;
    }

        #boton:hover {
            opacity: .8;
        }

    #caja {
        width: 100%;
        margin: auto;
        height: 0px;
        box-shadow: 22px 14px -4px rgba(250,216,113,1);
        transition: height .4s;
    }

    #boton:hover {
        opacity: .8;
    }

        #boton:hover + #caja {
            height: 50px;
            width: auto;
            font-size: 16px;
            border: 1px solid;
            margin: 10px 0px;
            padding: 15px 50px 15px 50px;
        }
</style>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Registro de administrador</h4>
    <hr />
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrarse" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
