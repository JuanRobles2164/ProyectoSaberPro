@using ProyectoSaberPro.Models
@using Microsoft.Owin.Security
@{
    ViewBag.Title = "Bienvenido!";
}
    <div class="titulo">@ViewBag.Title</div>

@using (Html.BeginForm("Register", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="info" align="center">
        <b>No se encontro ningún usuario. </b>
        <div id="boton" onclick="divLogin()"></div>
        <div class="ojo" id="caja" style="vertical-align:middle;">
            <b>Cree su primer usuario de tipo administrador.</b>
        </div>
    </div>
    <section id="socialLoginForm">
        <div class="rgs"><b>Registrese con Google...@Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })</b></div>

    </section>

</div>
    <style>
        .ojo, .info {
            background-repeat: no-repeat;
            background-position: 10px center;
            font-family: Arial, Helvetica, sans-serif;
            text-align: left;
        }

        .ojo {
            color: #9F6000;
            font-size: 0px;
            background-color: #FEEFB3;
            background-image: url('../../Pictures/info-advertencia.png');
        }

        .info {
            color: #D8000C;
            width: auto;
            vertical-align: middle;
            border: 1px solid;
            margin: 10px 0px;
            font-size: 20px;
            padding: 10px 50px 10px 50px;
            color: #00529B;
            background-color: #BDE5F8;
            background-image: url('../../Pictures/informacion.png');
            background-position: center;
        }

        .titulo{
            font-size: 75px;
            vertical-align: middle;
            color: #05193D;
            font-weight: bold;
        }

        .rgs{
            font-size: 22px;
            vertical-align: middle;
            color: #05193D;
        }
        #boton {
            background-color: #BDE5F8;
            background-image: url('../../Pictures/info.png');
            width: 32px;
            cursor: pointer;
            text-align: center;
            height: 32px;
            box-shadow: 0px 0px 2px #000;
            display: inline-block;
            vertical-align: middle;
        }

            #boton:hover {
                opacity: .8;
            }

        #caja {
            width: 100%;
            margin: auto;
            height: 0px;
            box-shadow: 22px 14px -4px rgba(250,216,113,1);
            transition: height .4s;
        }

        #boton:hover {
            opacity: .8;
        }

            #boton:hover + #caja {
                height: 50px;
                width: auto;
                font-size: 16px;
                border: 1px solid;
                margin: 10px 0px;
                padding: 15px 50px 15px 50px;
            }
    </style>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
