@model IEnumerable<ProyectoSaberPro.Models.Administrador>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}
<div class="margen">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Crear nuevo", "Create", "Administrador", new { @class = "btn btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                &nbsp; @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="display: flex; justify-content: center;align-content: center;flex-direction: column;">
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td align="right">
                    <a href="@Url.Action("Edit", new { id = item.ID })">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="@Url.Action("Details", new { id = item.ID })">
                        <i class="fa fa-search-plus"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.ID })">
                            <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
<style>
    .table{
        font-size: 16px;
    }
    .margen {
        margin: 5px 200px 5px 200px;
        text-align: justify;
    }
    .fa {
            font-size: 5em;
            position: relative;
            display: table-cell;
            width: 60px;
            height: 36px;
            font-size: 20px;
    }
    .fa-pencil {
        color: #EFD30B;
    }

    .fa-pencil:hover {
        color: #D3B70B;
    }
    .fa-trash {
        color: #DE0E0E;
    }

    .fa-trash:hover {
        color: #A00C0C;
    }
    .fa-search-plus {
        color: #0F55F4;
    }

    .fa-search-plus:hover {
        color: #0A3BAA;
    }
</style>