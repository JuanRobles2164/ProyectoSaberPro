@model IEnumerable<ProyectoSaberPro.Models.Docente>

@{
    ViewBag.Title = "IndexDocentes";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>IndexDocentes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditDocente", new { id=item.ID }) |
            @Html.ActionLink("Detalles", "DetailsDocente", new { id=item.ID }) |
            @Html.ActionLink("Borrar", "DeleteDocente", new { id=item.ID })
        </td>
    </tr>
}

</table>
